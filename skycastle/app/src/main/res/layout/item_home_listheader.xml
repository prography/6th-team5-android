<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98.6dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97.6dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/checkBox"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            android:src="@color/selector_home_univ_img"
            android:layout_gravity="center"
            android:layout_marginLeft="20.6dp"
            android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="12.2dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/universityTextView"
        android:text="University"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/nanumsquare_b"
        android:textSize="12.5sp"
        android:textColor="#101010" />

    <TextView
        android:id="@+id/applyTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp"
        android:text="ApplyType"
        android:fontFamily="@font/nanumsquare_r"
        android:textSize="11.3sp"
        android:textColor="#848484" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="11.1dp"
        android:text="D-day"
        android:gravity="right"
        android:fontFamily="@font/nanumsquare_b"
        android:textSize="15sp"
        android:textColor="#101010" />

    <ImageView
        android:id="@+id/dropdownImageView"
        android:layout_width="14.6dp"
        android:layout_height="7.2dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="18.2dp"
        android:clickable="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
</LinearLayout>