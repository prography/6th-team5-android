<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/off_fullview"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/off_layout"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date_textview"
            android:layout_marginTop="10.2dp"
            android:layout_marginBottom="10.2dp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            android:text="8월 11일"
            android:paddingLeft="15dp"
            android:textSize="15dp"/>
        <!--<View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f2f2f2" />-->
        <View
            android:id="@+id/check_color"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#319F5F" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/like_chips"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text=" 15:00 "/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/like_chips"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text=" 16:00 "/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/like_chips"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text=" 17:00 "/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/like_chips"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text=" 18:00 "/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />
</LinearLayout>